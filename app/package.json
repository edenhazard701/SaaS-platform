{
  "name": "saas-app",
  "version": "1.2.0",
  "license": "MIT",
  "scripts": {
    "dev": "tsnd --respawn --transpileOnly --project tsconfig.server.json server/app.ts",
    "build": "next build && tsc --project tsconfig.server.json",
    "postinstall": "next build && rm -rf production-server/ & tsc --project tsconfig.server.json",
    "start": "NODE_ENV=production node production-server/server/app.js",
    "start:container": "NODE_ENV=development node production-server/server/app.js",
    "now": "now && now alias",
    "now-rm": "now rm saas-app --safe --yes",
    "lint": "tslint -p tsconfig.json && tslint -p tsconfig.server.json",
    "test": "jest --coverage --passWithNoTests",
    "processes-3000": "ss -lptn 'sport = :3000'",
    "processes-node": "ps -e|grep node",
    "kill-processes-at-port": "lsof -i tcp:3000 | awk 'NR!=1 {print $2}' | xargs kill",
    "docker:build": "yarn lint && yarn test && docker image build . -t saas-app:latest",
    "docker:run": "yarn docker:clean && yarn docker:runHelper",
    "docker:runHelper": "docker run --name saas-app-latest --env-file .env -d -p 8000:8000 saas-app:latest",
    "docker:clean": "docker rm -f saas-app-latest || true",
    "docker:taillogs": "docker logs -f saas-app-latest",
    "docker:debug": "yarn docker:build && yarn docker:run && yarn docker:taillogs"
  },
  "jest": {
    "coverageDirectory": "./.coverage"
  },
  "dependencies": {
    "@material-ui/core": "3.9.2",
    "@types/node": "11.11.6",
    "@zeit/next-typescript": "1.1.1",
    "downshift": "3.2.7",
    "express": "4.16.4",
    "he": "1.2.0",
    "helmet": "3.16.0",
    "htmlescape": "1.1.1",
    "isomorphic-unfetch": "3.0.0",
    "keycode": "^2.2.0",
    "lodash": "4.17.11",
    "marked": "0.6.1",
    "mobx": "5.9.0",
    "mobx-react": "5.4.3",
    "moment": "2.24.0",
    "next": "8.0.3",
    "nprogress": "0.2.0",
    "react": "16.8.5",
    "react-dom": "16.8.5",
    "react-jss": "8.6.1",
    "react-mentions": "2.4.2",
    "react-stripe-checkout": "2.6.3",
    "socket.io-client": "^2.2.0",
    "typescript": "3.3.4000"
  },
  "devDependencies": {
    "@types/express": "4.16.1",
    "@types/he": "1.1.0",
    "@types/helmet": "0.0.43",
    "@types/htmlescape": "1.1.1",
    "@types/lodash": "4.14.123",
    "@types/marked": "0.6.3",
    "@types/material-ui": "0.21.6",
    "@types/next": "8.0.3",
    "@types/nprogress": "0.0.29",
    "@types/react": "16.8.8",
    "@types/react-dom": "16.8.3",
    "@types/react-jss": "8.6.3",
    "@types/socket.io-client": "^1.4.32",
    "@types/styled-jsx": "2.2.8",
    "jest": "24.5.0",
    "ts-node": "8.0.3",
    "ts-node-dev": "^1.0.0-pre.39",
    "tslint": "5.14.0"
  }
}
